#include <iostream>
using namespace std;

int main ()
{
    cout << "Enter a number:\n";
    int numb;
    cin >> numb;
    int i = 0;
    int d = numb;
    int r = 1;
    while (d >= 1 && r <= 1){
        r = d % 10;
        d = d / 10;
        i = i + 1;
    }
    int two = 1;
    int sum = 0;
    d = numb;
    while (i > 0){
        r = d % 10;
        d = d / 10;
        sum = sum + r * two;
        two = two * 2;
        i = i - 1;
    }
    cout << sum;
    return 0;
}
